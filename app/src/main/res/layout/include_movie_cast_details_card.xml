<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_card"
    android:layout_marginLeft="@dimen/spacing_card"
    android:layout_marginRight="@dimen/spacing_card">

    <LinearLayout
        android:id="@+id/card_content_holder_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/card_header_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="true"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/spacing_major">

            <TextView
                android:id="@+id/txt_see_more_cast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="@string/see_more"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="?attr/colorAccent"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_title_cast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="4dp"
                android:text="Cast"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/spacing_major"
            android:paddingRight="@dimen/spacing_major"
            android:paddingTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poster1_cast"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_profile_placeholder" />

            <TextView
                android:id="@+id/txt_title1_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="-8dp"
                android:maxLines="2"
                android:text="@string/caster_name" />

            <TextView
                android:id="@+id/txt2_title1_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="@string/role_name" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/spacing_major"
            android:paddingRight="@dimen/spacing_major"
            android:paddingTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poster2_cast"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_profile_placeholder" />

            <TextView
                android:id="@+id/txt_title2_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="-8dp"
                android:maxLines="2"
                android:text="@string/caster_name" />

            <TextView
                android:id="@+id/txt2_title2_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="@string/role_name" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/spacing_major"
            android:paddingRight="@dimen/spacing_major"
            android:paddingTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poster3_cast"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_profile_placeholder" />

            <TextView
                android:id="@+id/txt_title3_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="-8dp"
                android:maxLines="2"
                android:text="@string/caster_name" />

            <TextView
                android:id="@+id/txt2_title3_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="@string/role_name" />

        </FrameLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

